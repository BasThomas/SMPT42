<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/scan_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="2.5dp"
        android:padding="5dp"
        android:src="@drawable/test_picture" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_toLeftOf="@+id/scan_arrow"
        android:layout_toRightOf="@+id/scan_image"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tbTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="6dp"
                android:text="TITLE"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/imageStarred"
                android:layout_width="25dp"
                android:layout_height="27dp"
                android:paddingBottom="3dp"
                android:paddingTop="8dp"
                android:src="@drawable/history_starred_dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tbCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
                android:text="COMPANY"
                android:textColor="#000"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="1dp"
                android:text="Gescand op"
                android:textSize="6dp" />

            <TextView
                android:id="@+id/tbDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="-1dp"
                android:text="26-10-2014"
                android:textSize="7dp" />

            <TextView
                android:id="@+id/tbTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                android:text="15:30"
                android:textSize="7dp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/scan_arrow"
        android:layout_width="15dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12.5dp"
        android:src="@drawable/oce_pijltje" />


</RelativeLayout>