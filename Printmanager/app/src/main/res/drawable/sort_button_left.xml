<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ff0000" />
            <stroke
                android:width="1dp"
                android:color="#ff8080" />

        </shape>

    </item>
    <item
        android:right="-1dp">
        <shape android:shape="rectangle" >
            <solid
                android:color="#ff0000" />
            <stroke
                android:width="1dp"
                android:color="#ff8080" />
        </shape>
    </item>
</layer-list>